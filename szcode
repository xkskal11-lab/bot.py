screenGui.Parent = PlayerGui

-- ğŸ”˜ Ø²Ø± ÙØªØ­ Ø§Ù„Ù‚ÙˆØ§Ø¦Ù…
local mainButton = Instance.new("TextButton")
mainButton.Size = UDim2.new(0,150,0,40)
mainButton.Position = UDim2.new(0.5,-75,0,10)
mainButton.BackgroundColor3 = Color3.fromRGB(0,200,0)
mainButton.Text = "SZ CODE"
mainButton.Font = Enum.Font.SourceSansBold
mainButton.TextSize = 20
mainButton.Parent = screenGui
rainbowText(mainButton)

-- ğŸªŸ Ø¥Ø·Ø§Ø± Ø§Ù„Ù‚Ø§Ø¦Ù…Ø©
