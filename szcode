-- ğŸ“œ Scroll Ù„Ø­ÙØ¸ Ø§Ù„Ø£ÙƒÙˆØ§Ø¯
local scrollFrame = Instance.new("ScrollingFrame")
scrollFrame.Size = UDim2.new(1,0,1,-40)
scrollFrame.Position = UDim2.new(0,0,0,40)
scrollFrame.CanvasSize = UDim2.new(0,0,0,0)
scrollFrame.BackgroundTransparency = 1
scrollFrame.Parent = mainFrame

-- ğŸ–Šï¸ Ø¯Ø§Ù„Ø© Ù†Ø³Ø®
local function copyText(text)
	if setclipboard then
		setclipboard(text)
	elseif toclipboard then
		toclipboard(text)
	end
end

-- ğŸ–Šï¸ Ø¯Ø§Ù„Ø© ØªØ¹Ø¨Ø¦Ø© Ø§Ù„Ø£ÙƒÙˆØ§Ø¯
local function loadCodes(codes)
	scrollFrame:ClearAllChildren()
	local y = 0
	for i,code in ipairs(codes) do
		local line = Instance.new("TextLabel")
		line.Size = UDim2.new(0.7,0,0,30)
		line.Position = UDim2.new(0,10,0,y)
		line.Text = i..". "..code
		line.TextColor3 = Color3.fromRGB(255,255,255)
		line.BackgroundTransparency = 1
		line.TextXAlignment = Enum.TextXAlignment.Left
		line.Font = Enum.Font.SourceSansBold
		line.TextSize = 18
		line.Parent = scrollFrame

		local copyBtn = Instance.new("TextButton")
		copyBtn.Size = UDim2.new(0.2,0,0,25)
		copyBtn.Position = UDim2.new(0.75,0,0,y+2)
		copyBtn.BackgroundColor3 = Color3.fromRGB(255,120,0)
		copyBtn.Text = "Ù†Ø³Ø®"
		copyBtn.TextColor3 = Color3.fromRGB(255,255,255)
		copyBtn.Parent = scrollFrame

		copyBtn.MouseButton1Click:Connect(function()
			copyText(code)
		end)

		y += 35
	end
	-- Ø²Ø± Ø±Ø¬ÙˆØ¹
	local backBtn = Instance.new("TextButton")
	backBtn.Size = UDim2.new(0.3,0,0,30)
	backBtn.Position = UDim2.new(0,10,0,y+10)
	backBtn.BackgroundColor3 = Color3.fromRGB(200,0,0)
	backBtn.Text = "Ø±Ø¬ÙˆØ¹"
	backBtn.TextColor3 = Color3.fromRGB(255,255,255)
	backBtn.Parent = scrollFrame

	backBtn.MouseButton1Click:Connect(function()
		scrollFrame:ClearAllChildren()
		loadMainMenu()
	end)

	scrollFrame.CanvasSize = UDim2.new(0,0,0,y+50)
end

