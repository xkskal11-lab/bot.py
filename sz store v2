mainGui.Name = "IRAQHUB_GUI"
mainGui.ResetOnSpawn = false
mainGui.Parent = PlayerGui

-- ÿ≤ÿ± IRAQHUB ÿ£ÿπŸÑŸâ ÿßŸÑÿ¥ÿßÿ¥ÿ©
